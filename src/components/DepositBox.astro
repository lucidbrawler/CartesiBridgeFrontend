<!-- src/components/DepositBox.astro -->
<section class="deposit-section">
  <h3 class="section-title">
    Deposit Real WART → Get wWART (then mint LIQUID)
  </h3>

  <div class="deposit-card">
    <p class="label">Send WART to this address:</p>
    
    <div class="address-box">
      <code class="warthog-address">a1b2c3d4e5f6789012345678901234567890abcd</code>
    </div>

    <button 
      onClick={`
        navigator.clipboard.writeText('a1b2c3d4e5f6789012345678901234567890abcd');
        const btn = this;
        const original = btn.innerHTML;
        btn.innerHTML = 'Copied!';
        btn.style.background = '#00ffcc';
        btn.style.color = 'black';
        setTimeout(() => {
          btn.innerHTML = original;
          btn.style.background = '';
          btn.style.color = '';
        }, 2000);
      `}
      class="copy-btn"
    >
      Copy Address
    </button>

    <p class="hint">
      After sending → wWART is auto-minted → deposit it via ERC20Portal → then click "Mint LIQUID"
    </p>
  </div>
</section>

<style>
.deposit-section { margin: 6rem 0; text-align: center; }
.section-title { font-size: 2rem; color: #ffcc00; text-shadow: 0 0 20px #ffcc0044; margin-bottom: 2rem; }
.deposit-card { background: rgba(20,20,20,0.8); border-radius: 32px; padding: 3rem; max-width: 680px; margin: 0 auto; border: 1px solid #333; }
.label { font-size: 1.1rem; opacity: 0.9; margin-bottom: 1rem; }
.warthog-address { 
  display: block; 
  background: #111; 
  color: #ffcc00; 
  padding: 1.4rem; 
  border-radius: 20px; 
  font-size: 1.4rem; 
  word-break: break-all; 
  margin: 1rem auto; 
  max-width: 100%; 
  border: 1px solid #444; 
  box-shadow: 0 0 20px rgba(255,204,0,0.2);
}
.copy-btn { 
  background: linear-gradient(135deg, #ffcc00, #ff9900); 
  color: black; 
  font-weight: bold; 
  padding: 1rem 3rem; 
  border-radius: 50px; 
  font-size: 1.2rem; 
  margin-top: 1rem;
  box-shadow: 0 8px 30px rgba(255,204,0,0.5);
}
.copy-btn:hover { transform: translateY(-4px); }
.hint { margin-top: 2rem; font-size: 0.95rem; opacity: 0.8; line-height: 1.7; }
</style>